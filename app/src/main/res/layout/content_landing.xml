<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="com.tween.viacelular.activities.LandingActivity"
	tools:showIn="@layout/activity_landing">
	<View
		android:id="@+id/dividerTitle"
		android:background="@color/gray"
		android:layout_width="wrap_content"
		android:layout_height="1dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="8dp"
		android:visibility="gone" />
	<RelativeLayout
		android:id="@+id/rlExample"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/dividerTitle">
		<TextView
			android:id="@+id/txtExample"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/landing_example"
			android:textColor="@color/action"
			android:layout_margin="@dimen/text_margin" />
		<android.support.v7.widget.RecyclerView
			android:id="@+id/rcwCard"
			android:scrollbars="none"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/txtExample" />
	</RelativeLayout>
	<include
		android:id="@+id/contentContact"
		layout="@layout/content_contact"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/rlExample" />
</RelativeLayout>