<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="com.tween.viacelular.activities.LandingActivity"
	tools:showIn="@layout/activity_landing">
	<android.support.v7.widget.CardView
		android:id="@+id/cardAbout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="6dp"
		card_view:cardCornerRadius="16dp"
		card_view:cardBackgroundColor="@color/background_cards"
		card_view:cardUseCompatPadding="false"
		card_view:cardElevation="2dp">
		<RelativeLayout
			android:id="@+id/rlAbout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/txtAbout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2dp"
				android:layout_marginStart="2dp"
				android:layout_marginRight="2dp"
				android:layout_marginEnd="2dp"
				android:gravity="center"
				android:paddingTop="8dp"
				android:text="@string/landing_title"
				android:textAlignment="center"
				android:textColor="@color/gray"
				android:textSize="16sp" />
			<TextView
				android:layout_below="@+id/txtAbout"
				android:id="@+id/txtId"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="10dp"
				android:text="@string/id_ok"
				android:textColor="@color/action"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textSize="16sp" />
			<LinearLayout
				android:id="@+id/llId"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/txtId"
				android:orientation="horizontal"
				android:visibility="visible"
				android:weightSum="3">
				<ImageView
					android:id="@+id/iconId"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_weight="0.5"
					android:contentDescription="@string/landing_contact"
					android:src="@drawable/ic_person_48dp" />
				<TextView
					android:id="@+id/txtValue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@color/black"/>
				<ImageView
					android:id="@+id/iconEdit"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginLeft="16dp"
					android:layout_marginStart="16dp"
					android:layout_weight="0.5"
					android:contentDescription="@string/landing_contact"
					android:src="@drawable/ic_edit_48dp"/>
			</LinearLayout>
			<View
				android:id="@+id/dividerTitle"
				android:layout_width="match_parent"
				android:layout_height="7dp"
				android:layout_below="@+id/llId"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="-7dp"
				android:background="@color/accent" />
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/card_btn"
				android:layout_below="@+id/dividerTitle"
				android:onClick="viewCards">
				<ImageView
					android:id="@+id/iconShowNotif"
					android:layout_width="25dp"
					android:layout_height="25dp"
					android:layout_toLeftOf="@+id/txtShowNotif"
					android:layout_toStartOf="@+id/txtShowNotif"
					android:contentDescription="@string/landing_contact"
					android:src="@drawable/ic_chat_white_48dp" />
				<TextView
					android:id="@+id/txtShowNotif"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="@string/notification_view"
					android:textAllCaps="true"
					android:layout_marginLeft="10dp"
					android:layout_marginStart="10dp"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@android:color/white" />
			</RelativeLayout>
		</RelativeLayout>
	</android.support.v7.widget.CardView>
	<include
		android:layout_below="@+id/cardAbout"
		android:id="@+id/contentContact"
		layout="@layout/content_contact"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />
</RelativeLayout>