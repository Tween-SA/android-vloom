<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="4dp"
	android:layout_marginTop="4dp"
	android:background="@color/background_company">
	<FrameLayout
		android:id="@+id/line"
		android:background="@color/light_gray"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="15dp"
		android:layout_marginStart="15dp"
		android:layout_marginRight="15dp"
		android:layout_marginEnd="15dp" />
	<android.support.v7.widget.CardView
		android:id="@+id/cardView"
		android:layout_below="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="6dp"
		android:layout_marginStart="6dp"
		android:layout_marginRight="6dp"
		android:layout_marginEnd="6dp"
		card_view:cardCornerRadius="16dp"
		card_view:cardBackgroundColor="@color/background_cards"
		card_view:cardUseCompatPadding="false"
		card_view:contentPadding="4dp"
		card_view:cardElevation="2dp">
		<RelativeLayout
			android:id="@+id/rlCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="12dp"
			android:paddingRight="12dp"
			android:paddingEnd="12dp"
			android:paddingStart="12dp"
			android:paddingLeft="12dp">
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/iconPrice"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:src="@drawable/ic_sms_price_24dp"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginBottom="10dp"
				android:layout_marginRight="4dp"
				android:layout_marginEnd="4dp"
				android:visibility="gone" />
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/iconSMS"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:src="@drawable/ic_sms_black_24dp"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/iconPrice"
				android:layout_toEndOf="@+id/iconPrice"
				android:layout_marginBottom="10dp"
				android:layout_marginRight="4dp"
				android:layout_marginEnd="4dp"
				android:visibility="gone" />
			<TextView
				android:id="@+id/rowTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="8dp"
				android:text="@string/today"
				android:textColor="@color/gray"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_alignParentTop="true"
				android:layout_toEndOf="@+id/iconSMS"
				android:layout_toRightOf="@+id/iconSMS" />
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/ibOptions"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/icon_more"
				android:layout_marginTop="10dp"
				android:background="?android:attr/selectableItemBackground"
				android:layout_alignParentRight="true"
				android:clickable="true"
				android:layout_alignParentEnd="true" />
			<TextView
				android:id="@+id/txtTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/you_have"
				android:textColor="@color/action"
				android:visibility="gone"
				android:textSize="20sp" />
			<TextView
				android:id="@+id/txtContent"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/you_have_text"
				android:layout_marginTop="6dp"
				android:textColor="@color/black"
				android:layout_below="@+id/rowTime"
				android:autoLink="web"
				android:textSize="15sp"
				android:lineSpacingExtra="4dp" />
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</RelativeLayout>