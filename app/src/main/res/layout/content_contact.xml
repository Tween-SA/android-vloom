<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:layout_marginBottom="4dp"
	android:layout_marginTop="4dp"
	android:id="@+id/rlItem"
	android:background="@color/background_company">
	<FrameLayout
		android:id="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="16dp" />
	<android.support.v7.widget.CardView
		android:id="@+id/cardContact"
		android:layout_below="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="6dp"
		android:layout_marginStart="6dp"
		android:layout_marginRight="6dp"
		android:layout_marginEnd="6dp"
		card_view:cardCornerRadius="16dp"
		card_view:cardBackgroundColor="@color/background_cards"
		card_view:cardUseCompatPadding="false"
		card_view:contentPadding="4dp"
		card_view:cardElevation="2dp">
		<RelativeLayout
			android:id="@+id/rlCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:paddingRight="16dp"
			android:paddingEnd="16dp"
			android:paddingLeft="16dp"
			android:paddingStart="16dp">
			<TextView
				android:id="@+id/txtContact"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="10dp"
				android:text="@string/landing_contact"
				android:textColor="@color/action"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_alignParentTop="true"
				android:textSize="16sp" />
			<ImageView
				android:id="@+id/iconUrl"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_below="@id/txtContact"
				android:src="@drawable/ic_language_gray_48dp"
				android:layout_centerVertical="true"
				android:background="?android:attr/selectableItemBackground"
				android:visibility="visible"
				android:contentDescription="@string/landing_contact" />
			<TextView
				android:id="@+id/txtUrl"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="30dp"
				android:paddingStart="30dp"
				android:paddingRight="0dp"
				android:paddingEnd="0dp"
				android:text="@string/url"
				android:textColor="@color/black"
				android:layout_below="@id/txtContact"
				android:layout_centerVertical="true"
				android:autoLink="web"
				android:textSize="15sp"
				android:textAppearance="?android:attr/textAppearanceMedium" />
			<ImageView
				android:id="@+id/iconPhone"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_below="@id/iconUrl"
				android:src="@drawable/ic_phone_gray_48dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:onClick="goTo"
				android:background="?android:attr/selectableItemBackground"
				android:visibility="visible"
				android:layout_marginTop="20dp"
				android:contentDescription="@string/landing_contact" />
			<TextView
				android:id="@+id/txtPhone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="30dp"
				android:paddingStart="30dp"
				android:paddingRight="0dp"
				android:paddingEnd="0dp"
				android:text="542614239139"
				android:textColor="@color/black"
				android:layout_below="@id/txtUrl"
				android:layout_marginTop="19dp"
				android:layout_centerVertical="true"
				android:textSize="15sp"
				android:onClick="goTo"
				android:textAppearance="?android:attr/textAppearanceMedium"
				tools:ignore="HardcodedText" />
			<ImageView
				android:id="@+id/iconEmail"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_below="@id/iconPhone"
				android:src="@drawable/ic_mail_gray_48dp"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_centerVertical="true"
				android:onClick="goTo"
				android:background="?android:attr/selectableItemBackground"
				android:visibility="visible"
				android:layout_marginTop="20dp"
				android:contentDescription="@string/landing_contact" />
			<TextView
				android:id="@+id/txtEmail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="30dp"
				android:paddingStart="30dp"
				android:paddingRight="0dp"
				android:paddingEnd="0dp"
				android:text="soporte@vloom.io"
				android:textColor="@color/black"
				android:layout_below="@id/txtPhone"
				android:layout_marginTop="19dp"
				android:layout_centerVertical="true"
				android:onClick="goTo"
				android:textSize="15sp"
				android:textAppearance="?android:attr/textAppearanceMedium"
				tools:ignore="HardcodedText" />
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</RelativeLayout>