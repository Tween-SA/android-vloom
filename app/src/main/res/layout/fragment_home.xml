<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/swiperefresh"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:id="@+id/rlContent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/toolBar">
		<RelativeLayout
			android:id="@+id/rlFreePass"
			android:layout_centerHorizontal="true"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginStart="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginEnd="10dp"
			android:background="@drawable/freepass">
			<ImageView
				android:id="@+id/ivFreePass"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_marginLeft="10dp"
				android:layout_centerVertical="true"
				android:layout_marginStart="10dp"
				android:src="@drawable/ic_beenhere_white_36dp" />
			<TextView
				android:id="@+id/txtFreePassTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/ivFreePass"
				android:layout_marginLeft="4dp"
				android:layout_marginStart="4dp"
				android:textStyle="bold"
				android:layout_toEndOf="@+id/ivFreePass"
				android:textColor="@android:color/white"
				android:text="@string/verify_phone_warning" />
			<TextView
				android:layout_below="@+id/txtFreePassTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/ivFreePass"
				android:layout_marginLeft="4dp"
				android:layout_marginStart="4dp"
				android:layout_toEndOf="@+id/ivFreePass"
				android:textColor="@android:color/white"
				android:text="@string/verify_phone_add" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_below="@+id/rlFreePass"
			android:id="@+id/rlEmpty"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/ivEmpty"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/no_notifications"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="40dp" />
			<TextView
				android:id="@+id/txtTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/no_notifications"
				android:textColor="@color/sub_text"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold"
				android:layout_below="@+id/ivEmpty"
				android:layout_alignLeft="@+id/ivEmpty"
				android:layout_alignStart="@+id/ivEmpty"/>
			<TextView
				android:id="@+id/txtSubTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/no_subnotifications"
				android:textColor="@color/sub_text"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_marginTop="10dp"
				android:layout_below="@+id/txtTitle"
				android:layout_alignLeft="@+id/txtTitle"
				android:layout_alignStart="@+id/txtTitle"
				android:layout_marginLeft="2dp"
				android:layout_marginStart="2dp"
				android:layout_alignRight="@+id/ivEmpty"
				android:layout_alignEnd="@+id/ivEmpty"/>
		</RelativeLayout>
		<android.support.v7.widget.RecyclerView
			android:id="@+id/rcwHome"
			android:scrollbars="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/rlEmpty"
			android:layout_marginTop="8dp" />
	</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>