<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="4dp"
	android:layout_marginTop="4dp"
	android:id="@+id/rlItem"
	android:background="@color/background_company">
	<FrameLayout
		android:id="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="16dp" />
	<android.support.v7.widget.CardView
		android:id="@+id/cardView"
		android:layout_below="@+id/line"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="6dp"
		android:layout_marginStart="6dp"
		android:layout_marginRight="6dp"
		android:layout_marginEnd="6dp"
		card_view:cardCornerRadius="16dp"
		card_view:cardBackgroundColor="@color/background_cards"
		card_view:cardUseCompatPadding="false"
		card_view:contentPadding="4dp"
		card_view:cardElevation="2dp">
		<RelativeLayout
			android:id="@+id/rlCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="10dp"
			android:paddingRight="16dp"
			android:paddingEnd="16dp"
			android:paddingStart="16dp"
			android:paddingLeft="16dp">
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/iconPrice"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:src="@drawable/ic_sms_price_24dp"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="10dp"
				android:layout_marginRight="4dp"
				android:layout_marginEnd="4dp"
				android:visibility="gone" />
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/iconSMS"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:src="@drawable/ic_sms_black_24dp"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/iconPrice"
				android:layout_toEndOf="@+id/iconPrice"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="10dp"
				android:layout_marginRight="4dp"
				android:layout_marginEnd="4dp"
				android:visibility="gone" />
			<TextView
				android:id="@+id/rowTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:layout_marginBottom="8dp"
				android:text="@string/today"
				android:textColor="@color/gray"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_alignParentTop="true"
				android:layout_toEndOf="@+id/iconSMS"
				android:layout_toRightOf="@+id/iconSMS" />
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/ibOptions"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/icon_more"
				android:layout_marginTop="18dp"
				android:background="?android:attr/selectableItemBackground"
				android:layout_alignParentRight="true"
				android:clickable="true"
				android:layout_alignParentEnd="true" />
			<TextView
				android:id="@+id/txtTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/you_have"
				android:textColor="@color/action"
				android:visibility="gone"
				android:textSize="20sp" />
			<TextView
				android:id="@+id/txtContent"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/you_have_text"
				android:layout_marginTop="6dp"
				android:textColor="@color/black"
				android:layout_below="@+id/rowTime"
				android:autoLink="web"
				android:textSize="15sp"
				android:lineSpacingExtra="4dp" />
			<FrameLayout
				android:layout_marginTop="10dp"
				android:id="@+id/subLine"
				android:background="@color/light_gray"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_marginLeft="5dp"
				android:layout_marginStart="5dp"
				android:layout_below="@+id/txtContent"
				android:layout_marginRight="5dp"
				android:layout_marginEnd="5dp" />
			<android.support.v7.widget.CardView
				android:id="@+id/cardReceipt"
				android:layout_width="match_parent"
				android:layout_height="72dp"
				card_view:cardElevation="4dp"
				card_view:cardCornerRadius="8dp"
				android:layout_below="@+id/subLine"
				android:layout_margin="1dp"
				card_view:cardUseCompatPadding="false"
				card_view:cardBackgroundColor="@color/background_receipt">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="?android:attr/selectableItemBackground">
					<View
						android:id="@+id/backgroundReceipt"
						android:background="@drawable/bg_icon_box"
						android:layout_alignParentLeft="true"
						android:layout_alignParentStart="true"
						android:layout_width="80dp"
						android:layout_height="72dp" />
					<de.hdodenhof.circleimageview.CircleImageView
						xmlns:app="http://schemas.android.com/apk/res-auto"
						android:id="@+id/circleReceipt"
						android:layout_width="56dp"
						android:layout_height="56dp"
						android:src="@color/action"
						android:layout_marginLeft="10dp"
						android:layout_marginStart="10dp"
						android:layout_centerVertical="true"
						app:civ_border_width="0dp"
						app:civ_border_color="@android:color/transparent" />
					<ImageView
						android:contentDescription="@string/app_name"
						android:id="@+id/iconReceipt"
						android:layout_width="56dp"
						android:layout_height="56dp"
						android:layout_marginLeft="10dp"
						android:layout_marginStart="10dp"
						android:layout_centerVertical="true"
						android:src="@drawable/icon_receipt" />
					<TextView
						android:id="@+id/txtReceipt"
						android:layout_toRightOf="@+id/backgroundReceipt"
						android:layout_toEndOf="@+id/backgroundReceipt"
						android:layout_centerVertical="true"
						android:textColor="@color/action"
						android:text="@string/enrich_receipt"
						android:layout_width="wrap_content"
						android:textSize="16sp"
						android:layout_marginLeft="28dp"
						android:layout_marginStart="28dp"
						android:textStyle="bold"
						android:layout_height="wrap_content" />
				</RelativeLayout>
			</android.support.v7.widget.CardView>
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</RelativeLayout>