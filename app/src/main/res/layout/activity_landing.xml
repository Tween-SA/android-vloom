<!--suppress XmlUnusedNamespaceDeclaration -->
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	tools:ignore="RtlHardcoded"
	tools:context="com.tween.viacelular.activities.LandingActivity"
	android:id="@+id/coordinatorLayout">
	<android.support.design.widget.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		android:fitsSystemWindows="true">
		<android.support.design.widget.CollapsingToolbarLayout
			android:id="@+id/collapsingToolbarLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_scrollFlags="scroll|exitUntilCollapsed"
			app:contentScrim="?attr/colorPrimary"
			android:fitsSystemWindows="true">
			<ImageView
				android:contentDescription="@string/app_name"
				android:id="@+id/ivPlaceholder"
				android:layout_width="match_parent"
				android:layout_height="300dp"
				android:src="@drawable/landing_effect"
				android:background="@color/action"
				android:scaleType="centerCrop"
				app:layout_collapseMode="parallax"
				app:layout_collapseParallaxMultiplier="0.9" />
			<android.support.v7.widget.Toolbar
				android:id="@+id/toolBar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				app:layout_collapseMode="pin"
				android:paddingTop="2dp"
				app:theme="@style/ThemeOverlay.AppCompat.Dark"
				android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
				android:theme="@style/ThemeOverlay.AppCompat.Dark"
				app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
				app:title=""
				app:subtitle="">
				<RelativeLayout
					android:id="@+id/rlCollapsed"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<ImageView
						android:contentDescription="@string/app_name"
						android:id="@+id/ibBack"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/back"
						android:gravity="center_vertical"
						android:layout_marginTop="10dp" />
					<de.hdodenhof.circleimageview.CircleImageView
						android:contentDescription="@string/app_name"
						android:id="@+id/circleView"
						android:layout_marginLeft="14dp"
						android:layout_width="50dp"
						android:layout_height="50dp"
						android:gravity="center_vertical"
						android:src="@mipmap/ic_launcher"
						android:layout_toRightOf="@+id/ibBack"
						app:layout_behavior="com.tween.viacelular.utils.AvatarImageBehavior"
						android:visibility="gone" />
					<TextView
						android:id="@+id/txtTitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:layout_marginTop="4dp"
						android:layout_marginLeft="8dp"
						android:textColor="@android:color/white"
						android:text="@string/app_name"
						android:layout_toRightOf="@+id/circleView"
						android:maxLines="1"
						android:ellipsize="end"
						android:textSize="18sp"
						android:visibility="gone" />
					<TextView
						android:id="@+id/txtSubTitleCollapsed"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginTop="2dp"
						android:layout_marginLeft="8dp"
						android:textSize="14sp"
						android:textColor="@color/light_gray"
						android:layout_below="@+id/txtTitle"
						android:layout_toRightOf="@+id/circleView"
						android:text="@string/app"
						android:maxLines="1"
						android:ellipsize="end"
						android:layout_alignParentLeft="@+id/txtTitle"
						android:visibility="gone" />
				</RelativeLayout>
			</android.support.v7.widget.Toolbar>
			<FrameLayout
				android:id="@+id/flTitle"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:layout_gravity="center_vertical|center_horizontal"
				android:orientation="vertical"
				app:layout_collapseMode="parallax"
				app:layout_collapseParallaxMultiplier="0.3">
				<LinearLayout
					android:id="@+id/rlTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:orientation="vertical">
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/logo"
						android:layout_width="80dp"
						android:layout_height="80dp"
						android:layout_gravity="center"
						android:src="@mipmap/ic_launcher"
						app:civ_border_width="2dp"
						app:civ_border_color="@android:color/white"
						app:layout_behavior="com.tween.viacelular.utils.AvatarImageBehavior" />
					<TextView
						android:id="@+id/txtBigTitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:gravity="bottom|center"
						android:text="@string/app_name"
						android:textColor="@android:color/white"
						android:layout_marginTop="6dp"
						android:textSize="18sp" />
					<TextView
						android:id="@+id/txtSubTitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:layout_marginTop="6dp"
						android:text="@string/app"
						android:textSize="14sp"
						android:textColor="@android:color/white" />
					<Button
						android:id="@+id/btnSuscribe"
						android:layout_width="wrap_content"
						android:minWidth="88dp"
						android:layout_height="36dp"
						android:text="@string/landing_suscribe"
						android:textColor="@color/black"
						android:textSize="14sp"
						android:onClick="suscribe"
						android:background="@drawable/btn_suscribe"
						android:enabled="true"
						android:paddingLeft="16dp"
						android:paddingRight="16dp"
						android:layout_marginTop="6dp"
						android:layout_gravity="center_horizontal"
						android:elevation="8dp" />
				</LinearLayout>
			</FrameLayout>
		</android.support.design.widget.CollapsingToolbarLayout>
	</android.support.design.widget.AppBarLayout>
	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="10dp"
		android:scrollbars="none"
		app:behavior_overlapTop="30dp"
		app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/txtAbout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/text_margin"
				android:gravity="center"
				android:lineSpacingExtra="6dp"
				android:paddingTop="20dp"
				android:text="@string/landing_title"
				android:textAlignment="center"
				android:textColor="@color/gray"
				android:textSize="16sp"/>
			<View
				android:id="@+id/dividerTitle"
				android:layout_width="match_parent"
				android:layout_height="1.5dp"
				android:layout_below="@+id/txtAbout"
				android:layout_marginTop="8dp"
				android:background="@color/light_gray"/>
			<ImageView
				android:id="@+id/iconShowNotif"
				android:layout_width="20dp"
				android:layout_height="20dp"
				android:layout_below="@+id/dividerTitle"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="10dp"
				android:contentDescription="@string/landing_contact"
				android:src="@drawable/ic_message_gray_48dp"/>
			<TextView
				android:id="@+id/txtShowNotif"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/dividerTitle"
				android:layout_marginTop="10dp"
				android:onClick="viewCards"
				android:paddingEnd="0dp"
				android:paddingLeft="60dp"
				android:paddingRight="0dp"
				android:paddingStart="60dp"
				android:text="@string/notification_view"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@color/black"/>
			<TextView
				android:id="@+id/txtId"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/iconShowNotif"
				android:layout_margin="@dimen/text_margin"
				android:text="@string/landing_contact"
				android:textColor="@color/action"/>
			<LinearLayout
				android:id="@+id/llId"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/txtId"
				android:orientation="horizontal"
				android:visibility="gone"
				android:weightSum="3">
				<ImageView
					android:id="@+id/iconId"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_weight="0.5"
					android:contentDescription="@string/landing_contact"
					android:src="@drawable/ic_person_48dp"/>
				<TextView
					android:id="@+id/txtValue"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:textColor="@color/black"/>
				<ImageView
					android:id="@+id/iconEdit"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginLeft="16dp"
					android:layout_weight="0.5"
					android:contentDescription="@string/landing_contact"
					android:src="@drawable/ic_edit_48dp"/>
			</LinearLayout>
			<View
				android:id="@+id/dividerContact"
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_below="@+id/llId"
				android:layout_marginTop="8dp"
				android:background="@color/light_gray"/>
			<include
				layout="@layout/content_landing"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/dividerContact"
				android:layout_margin="8dp"/>
		</RelativeLayout>
	</android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
