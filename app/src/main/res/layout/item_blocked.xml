<?xml version="1.0" encoding="utf-8"?>
<!-- Agregado para retroalimentar el toque del usuario -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="10dp"
	android:paddingBottom="8dp"
	android:paddingTop="8dp"
	android:background="?android:attr/selectableItemBackground">
	<ImageView
		android:contentDescription="@string/app_name"
		android:id="@+id/circleView"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginLeft="20dp"
		android:layout_marginStart="20dp"
		android:src="@drawable/ic_launcher" />
	<TextView
		android:id="@+id/rowText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingStart="10dp"
		android:text="@string/app_name"
		android:textColor="@color/black"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_alignTop="@+id/circleView"
		android:layout_toRightOf="@+id/circleView"
		android:layout_toEndOf="@+id/circleView" />
	<TextView
		android:id="@+id/rowSubText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingStart="10dp"
		android:text="@string/no_messages_card"
		android:textColor="@color/gray"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_below="@+id/rowText"
		android:layout_alignLeft="@+id/rowText"
		android:layout_alignStart="@+id/rowText" />
	<ImageButton
		android:contentDescription="@string/app_name"
		android:id="@+id/ibUnLock"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_add_circle_black_24dp"
		android:layout_alignBottom="@+id/rowSubText"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:layout_marginRight="20dp"
		android:clickable="true"
		android:background="@android:color/transparent"
		android:layout_marginEnd="20dp" />
</RelativeLayout>